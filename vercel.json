{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  
  "env": {
    "NEXT_PUBLIC_SITE_URL": {
      "description": "neural-frame-ylumni.vercel.app",
      "required": false
    },
    "NEXT_PUBLIC_COMPANY_EMAIL": {
      "description": "hello@ylumni.com",
      "required": false
    },
    "SENDGRID_API_KEY": {
      "description": "SendGrid API key for email",
      "required": false
    },
    "RESEND_API_KEY": {
      "description": "Resend API key for email",
      "required": false
    },
    "AWS_SES_REGION": {
      "description": "AWS SES region",
      "required": false
    },
    "NEXT_PUBLIC_GA_ID": {
      "description": "Google Analytics ID",
      "required": false
    }
  },

  "regions": ["sfo1"],
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 0 * * *"
    }
  ]
}
