# ============================================================================
# NeuralFrame Studio - Environment Variables Configuration
# ============================================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!
# ============================================================================

# SITE CONFIGURATION
# ============================================================================
NEXT_PUBLIC_SITE_URL=https://neural-frame-ylumni.vercel.app
NEXT_PUBLIC_COMPANY_EMAIL=hello@ylumni.com
NEXT_PUBLIC_COMPANY_PHONE=+1-XXX-XXX-XXXX

# EMAIL SERVICE (Choose one)
# ============================================================================
# Option 1: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@ylumni.com

# Option 2: Resend (Recommended - easiest)
RESEND_API_KEY=your_resend_api_key_here

# Option 3: AWS SES
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@ylumni.com
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Option 4: Nodemailer (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ANALYTICS & MONITORING
# ============================================================================
NEXT_PUBLIC_GA_ID=G_XXXXXXXXXX
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxxxxxxx

# DATABASE (Optional)
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/neuralframe

# RATE LIMITING (Production)
# ============================================================================
REDIS_URL=redis://localhost:6379

# FEATURE FLAGS
# ============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_FORMS=true
NEXT_PUBLIC_MAINTENANCE_MODE=false

# SECURITY
# ============================================================================
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=hhttps://neural-frame-ylumni.vercel.app/

# API RATE LIMITING
# ============================================================================
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=5

